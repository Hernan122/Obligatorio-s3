@using LogicaNegocio.EntidadesNegocio;
@using MVC.Models.Usuario;
@model AltaUsuarioViewModel;

@{
    ViewData["Title"] = "Index";
}

@if (ViewBag.Mensaje != null)
{
    <h5 class="alert alert-success">@ViewBag.Mensaje</h5>
}
@if (ViewBag.MensajeError != null)
{
    <h5 class="alert alert-danger">@ViewBag.MensajeError</h5>
}

<h1 class="mb-3">Alta Usuario</h1>
<form asp-action="AltaUsuario">
    <div class="form-floating mb-3">
        <input asp-for="Nombre" type="text" class="form-control" id="floatingInputInvalid" placeholder>
        <label for="floatingInputInvalid">Nombre de Usuario</label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Email" type="email" class="form-control" id="floatingInputInvalid" placeholder>
        <label for="floatingInputInvalid">Email</label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Password" type="text" class="form-control" id="floatingInputInvalid" placeholder>
        <label for="floatingInputInvalid">Contraseña</label>
    </div>
    <div class="form-floating mb-3">
        <select asp-for="Rol" class="form-select" id="floatingSelect" aria-label="Floating label select example">
            <option value="">Seleccione Rol</option>
            @foreach (Rol item in Enum.GetValues(typeof(Rol)))
            {
                <option value="@item">@item</option>
            }
        </select>
        <label for="floatingSelect">Rol</label>
    </div>
    <input type="submit" value="Registarse" class="btn btn-primary w-100" />
</form>