@using MVC.Models.Usuario
@model IEnumerable<ListadoUsuarioViewModel>

@{
    ViewData["Title"] = "Listado Usuarios";
}

<h1>Listado Usuarios</h1>

@if (ViewBag.Mensaje != null)
{
    <h5 class="alert alert-success">@ViewBag.Mensaje</h5>
}
@if (ViewBag.MensajeError != null)
{
    <h5 class="alert alert-danger">@ViewBag.MensajeError</h5>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(c => c.Id)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(c => item.Id)
            </td>
            <td>
                @Html.DisplayFor(c => item.Nombre)
            </td>
            <td>
                @* @Html.ActionLink("Editar", "EditarUsuario", new { id = item.Id }) | *@
                @Html.ActionLink("Ver Detalles", "VerDetallesUsuario", new { id = item.Id }) |
                @Html.ActionLink("Borrar", "BajaUsuario", new { id = item.Id })
            </td>
        </tr>
    }
    </tbody>
</table>