@using LogicaNegocio.EntidadesNegocio;
@using MVC.Models.Envio.Comun
@model AltaComunViewModel;

@{
    ViewData["Title"] = "Nuevo Envio";
}

@if (ViewBag.Mensaje != null)
{
    <h5 class="alert alert-success">@ViewBag.Mensaje</h5>
}
@if (ViewBag.MensajeError != null)
{
    <h5 class="alert alert-danger">@ViewBag.MensajeError</h5>
}

<h1 class="mb-3">Crear Envio Comun</h1>

<form asp-action="CrearEnvio?tipo=Comun">

    <div class="form-floating mb-3">
        <input asp-for="NumeroTracking" type="text" class="form-control" id="floatingInputInvalid" placeholder>
        <label for="floatingInputInvalid">NumeroTracking</label>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="PesoPaquete" type="text" class="form-control" id="floatingInputInvalid" placeholder>
        <label for="floatingInputInvalid">PesoPaquete</label>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="EmailCliente" type="Email" class="form-control" id="floatingInputInvalid" placeholder>
        <label for="floatingInputInvalid">EmailCliente</label>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Fecha" type="datetime" class="form-control" id="floatingInputInvalid" placeholder>
        <label for="floatingInputInvalid">Fecha</label>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="UbPos" type="number" class="form-control" id="floatingInputInvalid" placeholder>
        <label for="floatingInputInvalid">UbPos</label>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Ubicacion" type="text" class="form-control" id="floatingInputInvalid" placeholder>
        <label for="floatingInputInvalid">Ubicacion</label>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="NombreAgencia" type="text" class="form-control" id="floatingInputInvalid" placeholder>
        <label for="floatingInputInvalid">NombreAgencia</label>
    </div>

    <input type="submit" value="Crear Envio Comun" class="btn btn-primary w-100" />
</form>