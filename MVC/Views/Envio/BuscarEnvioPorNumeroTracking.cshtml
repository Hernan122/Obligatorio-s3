@using MVC.Models.Envio;
@model ListadoEnviosViewModel;

@{
    ViewData["Title"] = "Filtrar Envio";
}

<h1>Filtrar Envio</h1>

@if (ViewBag.Mensaje != null)
{
    <h5 class="alert alert-success">@ViewBag.Mensaje</h5>
}
@if (ViewBag.MensajeError != null)
{
    <h5 class="alert alert-danger">@ViewBag.MensajeError</h5>
}

<form asp-action="BuscarEnvioPorNumeroTracking">
    <div class="input-group mb-3">
        <input name="numeroTracking" type="text" class="form-control" placeholder="Numero Tracking" aria-label="Numero Tracking">
        <button class="btn btn-outline-secondary" type="submit" >Buscar</button>
    </div>
</form>

@if (Model != null)
{

<h3 class="bg-primary p-2 text-white rounded-1 mb-3">Envio</h3>

<p>
    <strong>@Html.DisplayNameFor(c => c.Tipo): </strong>
    <span>@Html.DisplayFor(c => c.Tipo)</span>
</p>
<p>
    <strong>@Html.DisplayNameFor(c => c.Id): </strong>
    <span>@Html.DisplayFor(c => c.Id)</span>
</p>
<p>
    <strong>@Html.DisplayNameFor(c => c.NumeroTracking): </strong>
    <span>@Html.DisplayFor(c => c.NumeroTracking)</span>
</p>
<p>
    <strong>@Html.DisplayNameFor(c => c.Estado): </strong>
    <span>@Html.DisplayFor(c => c.Estado)</span>
</p>
<p>
    <strong>@Html.DisplayNameFor(c => c.FuncionarioId): </strong>
    <span>@Html.DisplayFor(c => c.FuncionarioId)</span>
</p>

}

@if (ViewBag.Seguimientos != null)
{

<h3 class="bg-success p-2 text-white rounded-1 mb-3">Seguimientos</h3>

<table class="table table-striped table-sm">

    <thead>
        <tr>
            <th>Id</th>
            <th>Fecha</th>
            <th>Comentario</th>
            <th>FuncionarioId</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in ViewBag.Seguimientos)
        {

        <tr>
            <td>@item.Id</td>
            <td>@item.Fecha</td>
            <td>@item.Comentario</td>
            <td>@item.FuncionarioId</td>
        </tr>

        }
    </tbody>
</table>

}