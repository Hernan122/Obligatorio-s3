@using MVC.Models.Envio
@model IEnumerable<ListadoEnviosDetalladosViewModel>

<h1>Listado envios</h1>

@if (ViewBag.Mensaje != null)
{
    <h5 class="alert alert-success">@ViewBag.Mensaje</h5>
}
@if (ViewBag.MensajeError != null)
{
    <h5 class="alert alert-danger">@ViewBag.MensajeError</h5>
}

@if (Model != null)
{

<table class="table align-middle">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(c => c.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Id)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.NumeroTracking)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.FuncionarioId)
            </th>
        </tr>
    </thead>

    <tbody>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{
                    var clase = "";
                }
                @if (item.Tipo == "Comun")
                {
                    clase = "bg-success p-1 text-white rounded-1";
                }
                else
                {
                    clase = "bg-danger p-1 text-white rounded-1";
                }
                <span class="@clase">@Html.DisplayFor(c => item.Tipo)</span>
            </td>
            <td>
                @Html.DisplayFor(c => item.Id)
            </td>
            <td>
                @Html.DisplayFor(c => item.NumeroTracking)
            </td>
            <td>
                @Html.DisplayFor(c => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(c => item.FuncionarioId)
            </td>
            <td>
                @Html.ActionLink("Ver Detalles Seguimientos", "ListadoSeguimientos", new { envioId = item.Id })
            </td>
        </tr>
    }

    </tbody>
</table>

}