@using LogicaNegocio.EntidadesNegocio
@using MVC.Models.Envio
@model IEnumerable<ListadoEnvioViewModel>

<h1>Listado Envios</h1>

@if (ViewBag.Mensaje != null)
{
    <h5 class="alert alert-success">@ViewBag.Mensaje</h5>
}
@if (ViewBag.MensajeError != null)
{
    <h5 class="alert alert-danger">@ViewBag.MensajeError</h5>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroTracking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FuncionarioId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        var clase = "";
                    }
                    @if (item.Tipo == "Comun")
                    {
                        clase = "bg-success p-1 text-white rounded-1";
                    } 
                    else
                    {
                        clase = "bg-danger p-1 text-white rounded-1";
                    }
                    <span class="@clase">@Html.DisplayFor(modelItem => item.Tipo)</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroTracking)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comentario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FuncionarioId)
                </td>
                <td>
                    <span>@Html.ActionLink("Borrar", "BajaEnvio", new { id = item.Id })</span>
                    |
                    @if (item.Estado == Estado.EN_PROCESO.ToString())
                    {
                        <span>@Html.ActionLink("Editar", "Editar")</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>